<Window x:Class="WpfApplication2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="484.4" Width="718.2">
    <Grid>
        <Button x:Name="btnBrowse" Content="Browse" HorizontalAlignment="Left" VerticalAlignment="Top" Width="93" Margin="521,52,0,0" Height="23" Click="btnBrowse_Click"/>
        <TextBox x:Name="txtPath" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" Text="Select folder" VerticalAlignment="Top" Width="422" Margin="47,52,0,0" IsEnabled="False"/>
        <Button x:Name="btnRead" Content="Read files" HorizontalAlignment="Left" VerticalAlignment="Top" Width="88" Margin="317,101,0,0" Click="btnRead_Click" Height="34" IsEnabled="False"/>
        <DataGrid x:Name="dgDisp" HorizontalAlignment="Left" Margin="10,156,0,0" VerticalAlignment="Top" Height="220" Width="692" ItemsSource="{Binding}"/>
        <Button x:Name="btnExport" Content="Export to Excel" HorizontalAlignment="Left" Margin="299,393,0,0" VerticalAlignment="Top" Width="126" Height="34" Click="btnExport_Click" IsEnabled="False"/>

    </Grid>
    
</Window>
